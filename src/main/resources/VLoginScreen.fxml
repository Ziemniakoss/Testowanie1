<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
		  xmlns:fx="http://javafx.com/fxml"
		  fx:controller="com.testowanie.controllers.CLoginScreen" alignment="CENTER" hgap="10" vgap="10">
	<padding>
		<Insets top="10" bottom="10" left="10" right="10"/>
	</padding>

	<Label text="To-Do app" GridPane.columnSpan="2"/>

	<Label text="Login: " GridPane.rowIndex="1"/>
	<TextField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="login"/>

	<Label text="Password" GridPane.rowIndex="2"/>
	<PasswordField fx:id="password" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

	<Button text="Login" onAction="#loginButton" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
</GridPane>
