<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
			xmlns:fx="http://javafx.com/fxml"
			fx:controller="com.testowanie.controllers.CTasksDisplay">
	<!--Lists display-->
	<left>
		<AnchorPane style="-fx-background-color: blue;">
			<ListView AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
					  AnchorPane.bottomAnchor="60"/>
			<TextField fx:id="leftNewList" AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="80"/>
			<Button onAction="#newTaskListOnAction" text="Add" maxWidth="60" prefWidth="60" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10"/>

		</AnchorPane>
	</left>


	<!--All task frm selected list display-->
	<center>
		<Label text="jj/"/>
		<Button onAction="#refresh" text="Refresh"/>
	</center>

	<!--Single task display-->
	<right>
		<AnchorPane>
			<GridPane>
				<padding>
					<Insets bottom="10" top="10" left="10" right="10"/>
				</padding>

				<TextField fx:id="rightTaskName" GridPane.columnSpan="2"/>
				<CheckBox fx:id="rightIsDone"/>

			</GridPane>

		</AnchorPane>
	</right>
</BorderPane>
